{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*",
      ]
    },
    "lib": [
      "es2020",
      "esnext.asynciterable",
      "dom"
    ],
    "skipLibCheck": true,
    "strict": false,
    "typeRoots": [
      "node_modules/@types",
      "custom_types"
    ]
  },
  "include": [
    "**/*.*"
  ]
}